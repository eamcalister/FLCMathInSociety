							</row>
							<row>
								<cell>Huge + Medium</cell>
								<cell></cell>
								<cell>8</cell>
								<cell></cell>
								<cell>23</cell>
								<cell>31</cell>
							</row>
							<row>
								<cell>Huge + Large</cell>
								<cell></cell>
								<cell></cell>
								<cell>16</cell>
								<cell>23</cell>
								<cell>39</cell>
							</row>
							<row>
								<cell>Huge + Small + Medium</cell>
								<cell>5</cell>
								<cell>8</cell>
								<cell></cell>
								<cell>23</cell>
								<cell>36</cell>
							</row>
							<row>
								<cell>Huge + Medium + Large</cell>
								<cell></cell>
								<cell>8</cell>
								<cell>16</cell>
								<cell>23</cell>
								<cell>47</cell>
							</row>
							<row>
								<cell>Huge + Small + Large</cell>
								<cell>5</cell>
								<cell></cell>
								<cell>16</cell>
								<cell>23</cell>
								<cell>44</cell>
							</row>
							<row>
								<cell>Large + Small + Medium</cell>
								<cell>5</cell>
								<cell>8</cell>
								<cell>16</cell>
								<cell></cell>
								<cell>29</cell>
							</row>
							<row>
								<cell>All States</cell>
								<cell>5</cell>
